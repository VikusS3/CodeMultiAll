<section
  class="w-full max-w-[1400px] flex flex-col justify-center items-center py-10 mt-16"
  id="contact"
>
  <h1 class="md:text-6xl text-4xl uppercase font-bold mb-10">Contactanos</h1>
  <div class="flex flex-row items-center justify-center gap-10">
    <img src="/logo.webp" alt="Logo con letras dentro de llaves CDL"
    class="w-1/4 md:w-1/6 hidden sm:block" loading="lazy"
    />

    <form
      action=""
      class="flex flex-col justify-center items-center gap-6 border w-screen sm:w-full max-w-[600px] md:p-10 rounded-lg p-4"
    >
      <input
        type="text"
        id="base-input"
        class="border  text-sm rounded-lg  block w-full p-2.5 "
        placeholder="Nombre completo"
      />
      <input
        type="email"
        id="email"
        aria-describedby="helper-text-explanation"
        class="border  text-sm rounded-lg  block w-full p-2.5 "
        placeholder="example@gmail.com"
      />

      <textarea
        id="message"
        rows="4"
        class="border  text-sm rounded-lg  block w-full p-2.5 "
        placeholder="Tu Mensaje..."></textarea>
      <input
        type="submit"
        value="Enviar"
        class=" bg-green-700 px-4 py-2 text-white rounded-lg hover:bg-green-600 transition-all duration-300 ease-in-out w-full md:w-1/2"
      />
    </form>
  </div>
</section>
